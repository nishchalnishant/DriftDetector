# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_TENANT_ID=your-tenant-id-here
AZURE_RESOURCE_GROUP=rg-pred-maint-prod
AZURE_LOCATION=westus2

# Azure ML Configuration
AZUREML_WORKSPACE_NAME=mlw-pred-maint-prod
AZUREML_RESOURCE_GROUP=rg-pred-maint-prod
AZUREML_COMPUTE_NAME=cpu-cluster
AZUREML_EXPERIMENT_NAME=predictive-maintenance

# Feast Configuration
FEAST_REDIS_CONNECTION_STRING=redis://your-redis-host:6379
FEAST_OFFLINE_STORE_TYPE=file
FEAST_OFFLINE_STORE_PATH=/data/feast/offline

# Model Serving Configuration
MODEL_NAME=anomaly-detection-model
MODEL_VERSION=latest
INFERENCE_BATCH_SIZE=32
PREDICTION_THRESHOLD=0.5

# Drift Detection Configuration
DRIFT_DETECTION_ENABLED=true
DRIFT_THRESHOLD=0.3
DRIFT_WINDOW_SIZE=1000
REFERENCE_DATA_PATH=/data/reference/baseline.parquet

# Monitoring Configuration
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO
ENABLE_METRICS=true

# AKS Configuration
AKS_CLUSTER_NAME=aks-pred-maint-prod
AKS_NAMESPACE=pred-maint
ACR_NAME=acrpredmaintprod

# Feature Store
FEATURE_SERVER_URL=http://feast-feature-server:6566
